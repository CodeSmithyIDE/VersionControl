ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/TestFramework/Include/Ishiko/TestFramework/TestFrameworkCore.bkl;
codesmithyidepath = envvar("CODESMITHYIDE");
import $(codesmithyidepath)/VersionControl/Include/CodeSmithy/VersionControl/CodeSmithyGit.bkl;

toolsets = gnu vs2017 vs2015 vs2013;

gnu.makefile = ../GNUmakefile/GNUmakefile;
vs2017.solutionfile = ../VC15/CodeSmithyGitTests.sln;
vs2015.solutionfile = ../VC14/CodeSmithyGitTests.sln;
vs2013.solutionfile = ../VC12/CodeSmithyGitTests.sln;

program CodeSmithyGitTests : CodeSmithyGit, IshikoTestFrameworkCore
{
    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += CodeSmithyGit CodeSmithyTasks IshikoTestFrameworkCore IshikoProcess IshikoErrors git2 boost_filesystem;
    }

    if ($(toolset) != gnu)
    {
        archs = x86 x86_64;
    }

    headers
    {
        ../../Source/GitRepositoryTests.h
    }

    sources
    {
        ../../Source/main.cpp
        ../../Source/GitRepositoryTests.cpp
    }
}
